<h1>Home</h1>

<%#= link_to "Sign out", destroy_user_session_path, :method => :delete %>
<html>
<body>
<header>
    <nav>
        <% if account_signed_in? %>
            <%= link_to 'プロフィール変更', edit_account_registration_path %>
            <%= link_to 'ログアウト', destroy_account_session_path, method: :delete %>
            <table>
              <thead>
                <tr>
                  <th>id</th>
                  <th>Mail</th>
                  <th>Win</th>
                  <th>Draw</th>
                  <th>Lose</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                  <tr>
                    <td><%= current_account.id %></td>
                    <td><%= current_account.email %></td>
                    <td><%= current_account.win %></td>
                    <td><%= current_account.draw %></td>
                    <td><%= current_account.lose %></td>
                  </tr>
              </tbody>
            </table>

        <% else %>
            <%= link_to 'サインアップ', new_account_registration_path %>
            <%= link_to 'ログイン', new_account_session_path %>
        <% end %>
    </nav>
</header>


</br>

<%= link_to '対戦する', rooms_show_path %>

<p>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>Email</th>
      <th>Win</th>
      <th>Draw</th>
      <th>Lose</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.id %></td>
        <td><%= account.email %></td>
        <td><%= account.win %></td>
        <td><%= account.draw %></td>
        <td><%= account.lose %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</body>
</html>
<p>Find me in app/views/home/index.html.erb</p>
